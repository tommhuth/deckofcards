    "babel-preset-stage-2": "^6.18.0",
    "babel-preset-stage-3": "^6.17.0",
    "body-parser": "^1.15.2",
    "chai": "^3.5.0",
    "compression": "^1.6.2",
    "cross-env": "^5.0.0",
    "debug": "^2.6.8",
    "express": "^4.15.3",
