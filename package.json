{
  "name": "react-boilerplate",
  "version": "1.1.0",
  "description": "",
  "main": "dist/server/server.js",
  "engines": {
    "node": "7.3"
  },
  "scripts": {
    "postinstall": "npm run build-server-prod && node node_modules/gulp/bin/gulp build && npm run build-client-prod && NODE_ENV=test node node_modules/mocha/bin/mocha tests --ui qunit --recursive --compilers js:babel-register",
    "test": "cross-env NODE_ENV=test mocha tests --ui qunit --recursive --compilers js:babel-register",
    "build-client": "webpack -w",
    "build-client-prod": "node node_modules/webpack/bin/webpack",
    "build-server": "babel src -d dist --copy-files --watch --source-maps",
    "build-server-prod": "node node_modules/babel-cli/bin/babel src -d dist --copy-files  ",
    "start": "cross-env DEBUG=server,server:* node dist/server/server.js",
    "stylelint": "stylelint 'resources/sass/**/*.scss'",
    "eslint": "eslint src tests",
    "dev" : "gulp & npm run build-server & npm run build-client",
    "dev-win" : "start /b gulp&& start /b npm run build-server&& start /b npm run build-client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://tommhuth@github.com/tommhuth/react-boilerplate.git"
  },
